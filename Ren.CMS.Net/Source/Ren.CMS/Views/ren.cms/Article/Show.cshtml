    string APPID = GS.Read("GLOBAL_SOCIAL_FB_APPID");

    Boolean.TryParse(GS.Read("GLOBAL_SOCIAL_FB_ENABLED"), out fb_enabled);
        
   string guestid = GS.Read("GLOBAL_GUESTPKID").ToLower();

