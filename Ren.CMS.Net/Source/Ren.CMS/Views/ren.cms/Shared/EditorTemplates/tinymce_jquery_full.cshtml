 @{
     string ID = Html.ProtectID(ViewData.TemplateInfo.HtmlFieldPrefix + new Random(1000) + DateTime.Now.ToString() + DateTime.Now.Millisecond.ToString());
 }

 @Html.TextArea(String.Empty, ViewData.TemplateInfo.FormattedModelValue.ToString(), new { id = ID  , @class = "ckeditor", width = "100%", height = "300px"});
 
 <script>


     $(function () {
         
         CKEDITOR.replace('@ID')

     });

 </script>