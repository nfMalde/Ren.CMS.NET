<script type="text/javascript">


    $(function () {
        $('.scrollUP').click(function () {

            $('html,body').animate({
                scrollTop: 0
            },
        'slow');




        });
      

        $('#2rating').click(function () {




            $('html,body').animate({
                scrollTop: $("#scroll2rating").offset().top
            },
        'slow');


        });
        $('#gall').click(function () {




            $('html,body').animate({
                scrollTop: $("#scroll2g").offset().top
            },
        'slow');


        });
        $('#vid').click(function () {




            $('html,body').animate({
                scrollTop: $("#scroll2v").offset().top
            },
        'slow');


        });


    });

</script>



 <script type="text/javascript">
     $(function () {
         $('#toogleComment').click(function () {


             var c = document.getElementById('commentfield');

             if (c.style.display != "block") $(c).slideDown();
             else $(c).slideUp();


         });
     });
     </script>
     
@if(Request.QueryString["fb_comment_id"] != null && fb_enabled){

<script type="text/javascript">

    $(document).ready(function () {



        $('#tabs-1').addClass("ui-tabs-hide");
        $('#tabs-2').removeClass("ui-tabs-hide");
        $('#tabnav1').removeClass("ui-tabs-selected");
        $('#tabnav1').removeClass("ui-state-active");

        $('#tabnav2').addClass("ui-tabs-selected");
        $('#tabnav2').addClass("ui-state-active");


    });

</script>

