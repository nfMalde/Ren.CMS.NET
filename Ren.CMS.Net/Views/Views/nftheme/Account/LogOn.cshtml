@model nfCMS_NET.Models.LogOnModel

@{
    ViewBag.Title = "Anmelden";
}

<h2>Anmelden</h2>
<p>
    Geben Sie Benutzernamen und Kennwort ein. @Html.ActionLink("Registrieren Sie sich", "Register"), wenn Sie noch kein Konto besitzen.
</p>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@Html.ValidationSummary(true, "Die Anmeldung war nicht erfolgreich. Beheben Sie die Fehler, und wiederholen Sie den Vorgang.")

@using (Html.BeginForm()) {
    <div>
        <fieldset>
            <legend>Kontoinformationen</legend>

            <div class="editor-label">
                @Html.LabelFor(m => m.UserName)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.UserName)
                @Html.ValidationMessageFor(m => m.UserName)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.Password)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.Password)
                @Html.ValidationMessageFor(m => m.Password)
            </div>

            <div class="editor-label">
                @Html.CheckBoxFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe)
            </div>

            <p>
                <input type="submit" value="Anmelden" />
            </p>
        </fieldset>
    </div>
}
